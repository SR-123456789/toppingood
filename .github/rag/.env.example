# RAG System Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Pinecone Configuration  
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=toppifygo-rag

# Supabase Configuration (for vector storage alternative)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Vector Database Settings
VECTOR_DIMENSION=1536
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=4000

# API Server Settings
PORT=3001
HOST=localhost
CORS_ORIGIN=*

# Data Processing Settings
MAX_FILE_SIZE=10MB
SUPPORTED_EXTENSIONS=.ts,.js,.tsx,.jsx,.sql,.py,.md,.txt,.json,.yaml,.toml
EXCLUDE_PATTERNS=node_modules,dist,build,.next,.git

# Embeddings Settings
BATCH_SIZE=100
EMBEDDING_CACHE=true
CACHE_TTL=86400
